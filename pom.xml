            </dependency>
            
            <!-- Dependencies for examples -->
            <dependency>
                <groupId>jfree</groupId>
                <artifactId>jfreechart</artifactId>
                <version>1.0.0</version>
            </dependency>
        
        </dependencies>
    </dependencyManagement>

